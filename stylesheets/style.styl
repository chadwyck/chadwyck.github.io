/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Istok+Web')

@import 'mixins'

// global-reset()
titleImg-height = 10.0vw

html
  overflow-y scroll

body
  font-family 'Istok Web'
  background-color background-color
  color #444
  margin 0

.navbar
    padding 0px 15%
    font-size 20px
    background-color black
    height navbar-height
    overflow visible
    color white
    margin-bottom 40px
    color #fff

.mainTitle
  margin-bottom 20px
  width 100%
  text-align center
  font-size 2.0vw
  display inline-block

  h2
    display inline-block
    position relative
    margin-left 50px
    margin-right 50px
    margin-bottom 0px
    margin-top 0px
    top -(titleImg-height * 0.4)

.titleImg
  height titleImg-height
  display inline-block

#brand
    float left
    padding (navbar-height * 0.1)
    top 0px
    display inline
    width 100px

.brandImg
    height (navbar-height * 0.8)

#signup
  color main-color

a
  color #fff
  text-decoration none

.navLinks
  margin (navbar-height * 0.2)
  position relative
  line-height 62px
  top 0
  height 40px
  padding 15px
  transitions(0.2s)
  background-color lighten(black, 5%)

.navLinks:hover
  background-color lighten(black, 15%)

.pictureCenter
  display inline-block
  margin 10px
  max-height 400px
  max-width 90%
  
.picContain
  text-align center

h1
  font-size 32px
  margin-bottom 30px

.browseCat
  margin-left 50px

.browseCat > p
  margin-bottom 15px

.container
  width 100%
  max-width 1100px
  margin 50px auto
  overflow hidden

.resultsPanel
  width 90%
  max-width 1500px
  margin-left auto
  margin-right auto
  background-color result-panel
  padding 3%
  margin-bottom 70px

.container > h1
  margin-left 5%
  margin-bottom 20px
  color main-color

p
  line-height 1.8

footer
  width 100%
  bottom 0
  text-align center
  padding-top 5px
  font-size 13px
  position fixed
  background-color black
  color white

#landingReel
  -webkit-animation-name:             rotate; 
  -webkit-animation-duration:         5.0s; 
  -webkit-animation-iteration-count:  infinite;
  -webkit-animation-timing-function: linear;

@-webkit-keyframes rotate {
  from {
    -webkit-transform: rotate(0deg);
  }
  to { 
    -webkit-transform: rotate(360deg);
  }
}